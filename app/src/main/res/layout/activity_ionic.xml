<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ionic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/ionic_TVOC_rl"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:background="@drawable/frame_rent_button2">


            <TextView
                android:id="@+id/ionic_TVOC_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ionic_TVOC_tv"
                android:layout_centerHorizontal="true"
                android:text="@string/adapter_msg3"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.example.yangsong.piaoai.myview.RoundProgressBar
                android:id="@+id/roundProgressBar_TVOC"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android_custom:roundColor="@color/baby_blue_eyes"
                android_custom:roundProgressColor="@color/electric_blue"
                android_custom:roundWidth="5dp"
                android_custom:textIsDisplayable="false" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ionic_control_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/jordy_blue"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/min_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/ionic_msg4"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baby_blue_eyes" />

                <TextView
                    android:id="@+id/minus_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="â€”"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baby_blue_eyes" />

                <TextView
                    android:id="@+id/plus_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baby_blue_eyes" />

                <TextView
                    android:id="@+id/max_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ionic_msg5"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/on_off_control_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@color/jordy_blue">

                <TextView
                    android:id="@+id/on_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ionic_msg6"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/baby_blue_eyes" />

                <TextView
                    android:id="@+id/off_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ionic_msg"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
