<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pm_msg"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-5dp"
        android:layout_weight="1">

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/pm_chart"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:id="@+id/text_ll"
            android:layout_width="20dp"
            android:layout_height="160dp"
            android:layout_alignTop="@+id/iv_ll"
            android:layout_marginTop="-5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="500"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="350"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="-3dp"
                    android:text="250"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.07"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="150"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.08"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="-3dp"
                    android:text="115"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.08"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="75"
                    android:textColor="@color/white"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.07"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="035"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="invisible" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_ll"
            android:layout_width="10dp"
            android:layout_height="160dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_ll"
            android:orientation="vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.3"
                android:background="@drawable/wwwwwwww_30" />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.2"
                android:background="@drawable/wwwwwwww_28" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.2"
                android:background="@drawable/wwwwwwww_25" />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.07"
                android:background="@drawable/wwwwwwww_23" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.08"
                android:background="@drawable/wwwwwwww_21" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.08"
                android:background="@drawable/wwwwwwww_19" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginStart="3dp"
                android:layout_weight="0.07"
                android:background="@drawable/wwwwwwww_17" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
