<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarRightText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarCenterTitle">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchTabLayout">
        <item name="tabIndicatorColor">@color/accent_bottom_navigation</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/bg_bottom_navigation</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance2</item>
        <item name="tabSelectedTextColor">@color/accent_bottom_navigation</item>
    </style>

    <style name="CustomTabTextAppearance2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="line_rb">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/service_rb_time</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/line_text_rb</item>
    </style>
    <style name="line_rb2">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/service_rb_time2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="setRadioButton2">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/set_selected</item>
        <item name="android:button">@null</item>
    </style>
    <style name="MainRadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/main_selected</item>
        <item name="android:gravity">center</item>
         <item name="android:paddingTop">3dp</item>
         <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/main_rb</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MainRadioButton2">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/main_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/main_rb</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="weatherTv">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/weather_tv</item>
    </style>
    <style name="historyTV">

        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/main_rb</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="historyTV2">
        <item name="android:textColor">@color/main_rb</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
